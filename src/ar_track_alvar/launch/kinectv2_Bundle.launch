<?xml version="1.0" encoding="UTF-8" standalone="no" ?>

<launch>
	<arg name="marker_size" default="5.0" />
	<arg name="max_new_marker_error" default="0.00008" />
	<arg name="max_track_error" default="0.0002" />
	<arg name="cam_image_topic" default="/kinect2/qd/points" />
	<arg name="cam_info_topic" default="/kinect2/hd/camera_info" />	
	<arg name="output_frame" default="/kinect2_rgb_optical_frame" />

    <arg name="med_filt_size" default="10" />
	<arg name="bundle_files" default="$(find ar_track_alvar)/bundles/CubeMarkers012-3.xml" />

	<node name="ar_track_alvar" pkg="ar_track_alvar" type="findMarkerBundles" respawn="false" output="screen"
	 args="$(arg marker_size) $(arg max_new_marker_error) $(arg max_track_error) $(arg cam_image_topic) $(arg cam_info_topic) $(arg output_frame) $(arg med_filt_size) $(arg bundle_files)" />

    <node name="tf_broadcast" pkg="ar_track_alvar" type="tf_broadcast"/>
</launch>
